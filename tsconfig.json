{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "types": ["vite/client"],
    "skipLibCheck": true,
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "baseUrl": ".",
    "paths": {
        "@/*": ["src/*"],
        "@core": ["src/core"],
        "@models": ["src/models"],
        "@views": ["src/views"],
        "@entities/*": ["src/entities/*"],
        "@sqlBuilder": ["src/libraries/sqlbuilder"],
        "@libraries": ["src/libraries"],
        "@datamodels": ["src/models/data"],
        "@datatable": ["src/libraries/datatable"],
        "@component": ["src/components"]
    }
  },
  "include": [
    "src",
    "plugins"
  ]
}